<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatuser">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/chati"
        android:src="@color/blue"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/imgbg"
        android:id="@+id/chatimg"
        android:scaleType="fitXY"

        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="demo"
        android:textStyle="italic"
        android:id="@+id/chatname"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler5"
        android:background="@drawable/wallpapermessage"
        android:layout_above="@+id/chat"
        android:layout_below="@+id/chati"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Message"
        android:id="@+id/chat"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="55dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendchat"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_baseline_send_24"/>

</RelativeLayout>